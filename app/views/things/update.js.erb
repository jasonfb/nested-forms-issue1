

<% if @thing.errors.none? %>
$(".things-table tr[data-id=<%= @thing.id %>]").html("<%= j render partial: 'dashboard/things/line', locals: {thing: @thing} %>")

<% else %>
$(".things-table tr[data-id=<%= @thing.id %>]").html("<%= j render partial: 'dashboard/things/edit', locals: {thing: @thing} %>")
$(".flash-notices").html("<%= j render 'layouts/flash_notices' %>");
<% end %>
